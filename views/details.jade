extends layout

block content
    div.container
        form(method="POST", action="/update")
            h2.form-signin-heading Change details
            input(name='username' class="form-control" placeholder="Name")
            label(for="name" class="sr-only") Name
            

            input(name='oldPassword' class="form-control" placeholder="Old password" autocomplete="off")
            label(for="inputPassword" class="sr-only" style="padding-top:10px;") New Password
            
            input(name="newPassword" type="password" class="form-control" placeholder="Password" autocomplete="off")
            label(for="inputPassword" class="sr-only") Password Again
            
            input(name="passwordAgain" type="confirmPassword" class="form-control" placeholder="Repeat your password" autocomplete="off")
        
            button.btn.btn-lg.btn-primary.btn-block.signin-bttn(type="submit") Update Details