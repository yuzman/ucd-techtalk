extends layout

block content
    div.container
        form.form-signin(method='POST' action='/login')
            h2.form-signin-heading Please sign in
            label(for='inputEmail').sr-only Email address
            input(name='username' class="form-control" placeholder="Email address" required="" autofocus="")
            label(for="inputPassword" class="sr-only") Password
            input(type="password" name="password" class="form-control" placeholder="Password" required="")
            div.checkbox
                label
                    input(type="checkbox" value="remember-me")
                    | Remember Me
            button.btn.btn-lg.btn-primary.btn-block.signin-bttn(type="submit") Sign in
            p(style='padding-top:10px;')
                a(href='/signup') Don't have an account? Sign Up Now!