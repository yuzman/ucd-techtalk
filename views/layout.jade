doctype html
html(ng-app="UCD")
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css') 
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' type='javascript/text')
    script(src="https://cdn.socket.io/socket.io-1.4.5.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js")
    script(src="javascripts/angular-route.min.js" type="text/javascript")
    script(src="javascripts/ui-bootstrap-2.1.3.min.js" type="text/javascript")
    script(src="javascripts/app.min.js" type="text/javascript")
  body
    nav.navbar.navbar-default
      div.container-fluid
        div.navbar-header
          button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
          a.navbar-brand UCD Tech Talk - Security Essentials 101
        div.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.active
              a(href='/') Home
          ul.nav.navbar-nav.navbar-right  
            li
              if username
                a(href='/details') !{username}
              else
                a(href='/login') Login
    block content
