extends layout

block content
    div.container
        form.form-signin(method='POST' action='/signup')
            h2.form-signin-heading Welcome onboard!
            input(name='username' class="form-control" placeholder="Name" required="" autofocus="")
            label(for="name" class="sr-only") Name
            label(for='inputEmail').sr-only Email address
            input(name='email' class="form-control" placeholder="Email address" required="" autofocus="")
            label(for="inputPassword" class="sr-only" style="padding-top:10px;") Password
            input(type="password" name="password" class="form-control" placeholder="Password" required="")
            label(for="inputPassword" class="sr-only") Password Again
            input(type="password" name="passwordAgain" class="form-control" placeholder="Repeat your password" required="")
            
            button.btn.btn-lg.btn-primary.btn-block.signin-bttn(type="submit") Sign in
            p(style='padding-top:10px;')
                a(href='/login') Already have an account? Sign in now!